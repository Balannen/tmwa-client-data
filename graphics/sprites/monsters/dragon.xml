<?xml version="1.0"?>
<sprite>
  <imageset name="base" src="graphics/sprites/monsters/dragon.png|W" width="96" height="96"/>
  <action name="stand" imageset="base">
    <animation direction="down">
      <frame index="0"/>
    </animation>
    <animation direction="left">
      <frame index="4"/>
    </animation>
    <animation direction="up">
      <frame index="12"/>
    </animation>
    <animation direction="right">
      <frame index="8"/>
    </animation>
  </action>
  <action name="walk" imageset="base">
    <animation direction="down">
      <sequence start="0" end="3" delay="175"/>
    </animation>
    <animation direction="left">
      <sequence start="4" end="7" delay="175"/>
    </animation>
    <animation direction="up">
      <sequence start="12" end="15" delay="175"/>
    </animation>
    <animation direction="right">
      <sequence start="8" end="11" delay="175"/>
    </animation>
  </action>
  <action name="dead" imageset="base">
    <animation>
      <frame index="12" delay="5000"/>
    </animation>
  </action>
</sprite>
